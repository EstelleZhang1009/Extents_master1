<div>
    <script type="text/ng-template" id="signon.html">
        <div class="modal-header">
            <h3 class="modal-title"><i class="material-icons">person</i> &nbsp; 请登录<!-- Please Sign-in --></h3>
        </div>
        
        <!-- signin form -->
        <form class="form" ng-controller="UserController" ng-model="query">
            <div class="modal-body">
                <div class="row" ng-if="invalidLogin">
                    <div class="col-md-12">
                        <div class="alert alert-danger">
                            <i class="fa fa-warning"></i> &nbsp; <!-- Invalid username or password. -->用户名或密码错误
                        </div>
                    </div>
                </div>
                
                <div class="row" ng-if="signedOn">
                    <div class="col-md-12">
                        <div class="alert alert-success">
                            <i class="fa fa-check"></i> &nbsp; <!-- Login successful -->登录成功.
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label ng-click="test()"><!-- User Name -->用户名:</label>
                            <input required type="text" class="form-control" ng-model="query.name" id="user" placeholder="请输入用户名" />
                        </div>
                        <div class="col-md-12 form-group">
                            <label><!-- Password -->密码:</label>
                            <input required type="password" class="form-control" ng-model="query.password" id="password" placeholder="请输入您的手机号" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button ng-disabled="disabled" class="btn btn-success" type="button" ng-click="signon(query)" type="submit"><!-- OK -->登录</button>
                <button class="btn btn-default" type="button" ng-click="cancel()"><!-- Close -->取消</button>
            </div>
        </form>
    </script>
</div>
